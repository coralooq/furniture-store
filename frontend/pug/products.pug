        mixin catalog(className, href, img, itemName, price, style)
            if className == "products-catalog__item-1"
                div(class=className+" catalog-items")
                    a(href=href)
                        img(src=img alt="#") 
                        h6=itemName 
                        p=price
            else
                a(href=href)
                    div(class=className+" catalog-items")
                        img(src=img style=style alt="#") 
                        h6=itemName 
                        p=price
