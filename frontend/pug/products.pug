        mixin accordion(dataBsTarget, ariaExpanded, ariaControls, question, id, sections)
            div.accordion-item
                h2.accordion-header
                    button(class='category-list__input-btn accordion-button collapsed' type="button" data-bs-toggle="collapse" data-bs-target=dataBsTarget aria-expanded=ariaExpanded aria-controls=ariaControls) #{question}
                div(id=id class="accordion-collapse collapse" data-bs-parent="#accordion")
                    div.accordion-body
                        for section in sections 
                            input(type="checkbox") 
                            span.category-list__input #{section}
                            br                
        div.category-list
